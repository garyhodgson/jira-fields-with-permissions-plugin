        <resource type="velocity" name="view" location="templates/RestrictedDateTimeCFType/datetime-view.vm"/>
        <resource type="velocity" name="edit" location="templates/RestrictedDateTimeCFType/datetime-edit.vm"/>
        <resource type="velocity" name="xml" location="templates/RestrictedDateTimeCFType/datetime-xml.vm"/>
