        class="com.fiberlink.jira.plugin.customfields.RestrictedNumberCFType">
        <description>A custom field that stores and validates numeric (floating point) input.</description>

        <resource type="velocity" name="view" location="templates/RestrictedNumberCFType/number-view.vm"/>
        <resource type="velocity" name="edit" location="templates/RestrictedNumberCFType/number-edit.vm"/>
        <resource type="velocity" name="xml" location="templates/RestrictedNumberCFType/number-xml.vm"/>
    </customfield-type>

