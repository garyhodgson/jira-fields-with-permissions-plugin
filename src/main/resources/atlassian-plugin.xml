
<atlassian-plugin key="flrestrictedfieldsbybalaram" name="Fields with Security Levels By Balaram">
    <plugin-info>
        <description>Fields with Security Levels by Balaram</description>
        <version>2.0</version>
        <application-version min="4.0" max="4.1"/>
        <vendor name="Balaram" url="http://bandibalaram.blogspot.com"/>
    </plugin-info>
        
    <customfield-type key="com.fiberlink.jira.plugin.customfields.RestrictedTextCFType" name="Fiberlink Restricted Text Field (&lt; 255 characters)"
    class="com.fiberlink.jira.plugin.customfields.RestrictedTextCFType">
        <description>A basic single line Restricted text box custom field to allow simple text input</description>

        <resource type="velocity" name="view" location="templates/RestrictedTextCFType/RestrictedTextCFType-view.vm"/>
        <resource type="velocity" name="edit" location="templates/RestrictedTextCFType/RestrictedTextCFType-edit.vm"/>
        <resource type="velocity" name="xml" location="templates/RestrictedTextCFType/RestrictedTextCFType-xml.vm"/>
    </customfield-type>

    <customfield-type key="com.fiberlink.jira.plugin.customfields.RestrictedTextAreaCFType" name="Fiberlink Restricted Free Text Field (unlimited text)"
        class="com.fiberlink.jira.plugin.customfields.RestrictedTextAreaCFType">
        <description>A multiline Restricted text area custom field to allow input of longer text strings.</description>

        <resource type="velocity" name="view" location="templates/RestrictedTextAreaCFType/RestrictedTextAreaCFType-view.vm"/>
        <resource type="velocity" name="column-view" location="templates/RestrictedTextCFType/RestrictedTextCFType-view.vm"/>
        <resource type="velocity" name="edit" location="templates/RestrictedTextAreaCFType/RestrictedTextAreaCFType-edit.vm"/>
        <resource type="velocity" name="xml" location="templates/RestrictedTextAreaCFType/RestrictedTextAreaCFType-xml.vm"/>
    </customfield-type>

    <customfield-type key="com.fiberlink.jira.plugin.customfields.RestrictedSelectCFType.select" name="Fiberlink Restricted Select List"
        class="com.fiberlink.jira.plugin.customfields.RestrictedSelectCFType">
        <description>A Restricted single select list with a configurable list of options.</description>

        <resource type="velocity" name="view" location="templates/RestrictedSelectCFType/select-view.vm"/>
        <resource type="velocity" name="edit" location="templates/RestrictedSelectCFType/select-edit.vm"/>
        <resource type="velocity" name="xml" location="templates/RestrictedSelectCFType/select-xml.vm"/>
    </customfield-type>

    <customfield-type key="com.fiberlink.jira.plugin.customfields.RestrictedSelectCFType.radiobuttons" name="Fiberlink Restricted Radio Buttons"
        class="com.fiberlink.jira.plugin.customfields.RestrictedSelectCFType">
        <description>A restricted list of radio buttons</description>

        <resource type="velocity" name="view" location="templates/RestrictedSelectCFType/radio-view.vm"/>
        <resource type="velocity" name="edit" location="templates/RestrictedSelectCFType/radio-edit.vm"/>
        <resource type="velocity" name="xml" location="templates/RestrictedSelectCFType/radio-xml.vm"/>
    </customfield-type>

    <customfield-type key="com.fiberlink.jira.plugin.customfields.RestrictedMultiSelectCFType.multiselect" name="Fiberlink Restricted Multi Select"
        class="com.fiberlink.jira.plugin.customfields.RestrictedMultiSelectCFType">
        <description>Choose multiple values in a select list.</description>

        <resource type="velocity" name="view" location="templates/RestrictedMultiSelectCFType/select-view.vm"/>
        <resource type="velocity" name="edit" location="templates/RestrictedMultiSelectCFType/select-edit.vm"/>
        <resource type="velocity" name="xml" location="templates/RestrictedMultiSelectCFType/select-xml.vm"/>

    </customfield-type>

    <customfield-type key="com.fiberlink.jira.plugin.customfields.RestrictedMultiSelectCFType.multicheckboxes" name="Fiberlink Restricted Multi Checkboxes"
        class="com.fiberlink.jira.plugin.customfields.RestrictedMultiSelectCFType">
        <description>Choose multiple values using checkboxes.</description>

        <resource type="velocity" name="view" location="templates/RestrictedMultiSelectCFType/check-view.vm"/>
        <resource type="velocity" name="edit" location="templates/RestrictedMultiSelectCFType/check-edit.vm"/>
        <resource type="velocity" name="xml" location="templates/RestrictedMultiSelectCFType/check-xml.vm"/>

    </customfield-type>

    <customfield-type key="com.fiberlink.jira.plugin.customfields.RestrictedUserCFType" name="Fiberlink Restricted User Picker"
        class="com.fiberlink.jira.plugin.customfields.RestrictedUserCFType">
        <description>Choose a user from the user base via a popup picker window.</description>

        <resource type="velocity" name="view" location="templates/RestrictedUserCFType/user-view.vm"/>
        <resource type="velocity" name="edit" location="templates/RestrictedUserCFType/user-edit.vm"/>
        <resource type="velocity" name="xml" location="templates/RestrictedUserCFType/user-xml.vm"/>
    </customfield-type>

    <customfield-type key="com.fiberlink.jira.plugin.customfields.RestrictedMultiUserCFType" name="Fiberlink Restricted Multi User Picker"
        class="com.fiberlink.jira.plugin.customfields.RestrictedMultiUserCFType">
        <description>Choose multiple users from the user base via a popup picker window.</description>

        <resource type="velocity" name="view" location="templates/RestrictedMultiUserCFType/multiuser-view.vm"/>
        <resource type="velocity" name="column-view" location="templates/RestrictedMultiUserCFType/multiuser-view.vm"/>
