        class="com.fiberlink.jira.plugin.customfields.RestrictedDateCFType">
        <description>A custom field that stores dates &amp; uses a date picker to view them</description>

        <resource type="velocity" name="view" location="templates/RestrictedDateCFType/date-view.vm"/>
        <resource type="velocity" name="edit" location="templates/RestrictedDateCFType/date-edit.vm"/>
        <resource type="velocity" name="xml" location="templates/RestrictedDateCFType/date-xml.vm"/>
