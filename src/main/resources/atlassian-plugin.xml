        <resource type="velocity" name="view" location="templates/plugins/fields/view-searcher/view-searcher-number-range.vm"/>

        <valid-customfield-type package="flrestrictedfieldsbybalaram" key="com.fiberlink.jira.plugin.customfields.RestrictedNumberCFType"/>
